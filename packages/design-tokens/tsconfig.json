{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2021",
    "lib": ["ESNext", "ES2021", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "@classes/*": ["./classes/*"],
      "@helpers/*": ["./helpers/*"],
      "@utils": ["./utils"],
      "@types": ["./types"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
